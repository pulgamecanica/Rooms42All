<p id="notice"><%= notice %></p>

<h1>Reservations</h1>

<table>
  <thead>
    <tr>
      <th>Room</th>
      <th>T beginning</th>
      <th>T ending</th>
      <th>Attendees</th>
      <th>Subject</th>
      <th>Reservation code</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.room_id %></td>
        <td><%= reservation.t_beginning %></td>
        <td><%= reservation.t_ending %></td>
        <td><%= reservation.attendees %></td>
        <td><%= reservation.subject %></td>
        <td><%= reservation.reservation_code %></td>
        <td><%= reservation.email %></td>
        <td><%= link_to 'Show', reservation %></td>
        <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
        <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


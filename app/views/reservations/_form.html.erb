<%= form_with(model: reservation) do |form| %>
  <% if reservation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(reservation.errors.count, "error") %> prohibited this reservation from being saved:</h2>

      <ul>
        <% reservation.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :room_id %>
    <%= form.collection_select :room_id, Room.all, :id, :name, {}, disabled: !@edit.nil? && !@edit %>
  </div>

  <div class="field">
    <%= form.label :start %>
    <%= form.datetime_select :t_beginning, disabled: !@edit.nil? && !@edit %>
  </div>

  <div class="field">
    <%= form.label :end %>
    <%= form.datetime_select :t_ending, disabled: !@edit.nil? && !@edit %>
  </div>

  <div class="field">
    <%= form.label :attendees %>
    <%= form.number_field :attendees, disabled: !@edit.nil? && !@edit %>
  </div>

  <div class="field">
    <%= form.label :subject %>
    <%= form.text_field :subject, disabled: !@edit.nil? && !@edit %>
  </div>

  <div class="field">
    <%= form.label :code %>
    <%= form.text_field :reservation_code, disabled: !@edit.nil? && !@edit %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, disabled: !@edit.nil? && !@edit %>
  </div>
  <hr class="m-0 pb-0 mt-3">
  <div class="actions text-center">
    <%= form.submit class:"btn btn-lg btn-primary m-4 submmit-reservation", disabled: !@edit.nil? && !@edit %>
  </div>
<% end %>
